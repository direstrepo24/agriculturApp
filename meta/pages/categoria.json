{
  "components": [
    {
      "type": "row",
      "components": [
        {
          "type": "col",
          "class": "col-md-12",
          "components": [
            {
              "name": "grid0",
              "allowDelete": true,
              "allowAdd": true,
              "allowFiltering": true,
              "allowMultiSorting": false,
              "allowPaging": true,
              "allowSorting": true,
              "count": "${getCategoriaCount}",
              "data": "${getCategoriaResult}",
              "events": {
                "loadData": [
                  {
                    "name": "agriculturebd.getCategoria",
                    "parameters": [
                      {
                        "name": "$top",
                        "value": "this.grid0.allowPaging ? event.top : null"
                      },
                      {
                        "name": "$skip",
                        "value": "this.grid0.allowPaging ? event.skip : null"
                      },
                      {
                        "name": "$expand",
                        "value": ""
                      },
                      {
                        "name": "$count",
                        "value": "this.grid0.allowPaging"
                      },
                      {
                        "name": "$filter",
                        "value": "${event.filter}"
                      },
                      {
                        "name": "$orderby",
                        "value": "${event.orderby}"
                      }
                    ],
                    "then": [
                      {
                        "name": "getCategoriaResult",
                        "type": "set",
                        "value": "${result.value}"
                      },
                      {
                        "name": "getCategoriaCount",
                        "type": "set",
                        "value": "this.grid0.allowPaging ? result['@odata.count'] : ${result.value.length}"
                      }
                    ],
                    "type": "invoke"
                  }
                ],
                "delete": [
                  {
                    "error": [
                      {
                        "detail": "Unable to delete Categorium",
                        "severity": "error",
                        "summary": "Error",
                        "type": "notify"
                      }
                    ],
                    "name": "agriculturebd.deleteCategorium",
                    "parameters": [
                      {
                        "name": "Id",
                        "value": "${event.Id}"
                      }
                    ],
                    "then": [
                      {
                        "detail": "Categorium deleted!",
                        "severity": "success",
                        "summary": "Success",
                        "type": "notify"
                      }
                    ],
                    "type": "invoke"
                  }
                ],
                "add": [
                  {
                    "path": "add-categorium",
                    "type": "popup"
                  }
                ],
                "rowSelect": [
                  {
                    "parameters": [
                      {
                        "name": "Id",
                        "value": "${event.Id}"
                      }
                    ],
                    "path": "edit-categorium",
                    "type": "popup"
                  }
                ]
              },
              "title": "",
              "columns": [
                {
                  "property": "Descripcion",
                  "title": "Descripcion",
                  "type": "string"
                },
                {
                  "property": "Id",
                  "title": "Id",
                  "type": "integer"
                },
                {
                  "property": "Imagen",
                  "title": "Imagen",
                  "type": "string"
                },
                {
                  "property": "Nombre",
                  "title": "Nombre",
                  "type": "string"
                }
              ],
              "type": "grid",
              "emptyText": "No records to display."
            }
          ]
        }
      ]
    }
  ],
  "events": {
    "load": [
      {
        "name": "agriculturebd.getCategoria",
        "parameters": [
          {
            "name": "$top",
            "value": "this.grid0.allowPaging ? this.grid0.pageSize : null"
          },
          {
            "name": "$skip",
            "value": "this.grid0.allowPaging ? 0 : null"
          },
          {
            "name": "$count",
            "value": "this.grid0.allowPaging"
          }
        ],
        "then": [
          {
            "name": "getCategoriaResult",
            "type": "set",
            "value": "${result.value}"
          },
          {
            "name": "getCategoriaCount",
            "type": "set",
            "value": "this.grid0.allowPaging ? result['@odata.count'] : ${result.value.length}"
          }
        ],
        "type": "invoke"
      }
    ]
  },
  "name": "Categoria",
  "access": [
    "Authenticated"
  ]
}